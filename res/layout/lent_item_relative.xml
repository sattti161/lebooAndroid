<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ADD8E6"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:paddingLeft="3dp" >

    <LinearLayout
        android:id="@+id/lent_item_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <EditText
            android:id="@+id/lent_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Lent Item"
            android:singleLine="true" >

            <requestFocus>
            </requestFocus>
        </EditText>

        <ImageView
            android:id="@+id/lent_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/lent_item"
            android:paddingLeft="3dp"
            android:paddingRight="5dp"
            android:src="@drawable/arrow_up" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lent_to_person_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lent_item_layout"
        android:gravity="center" >

        <EditText
            android:id="@+id/lent_to_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Lent To"
            android:singleLine="true" >

            <requestFocus>
            </requestFocus>
        </EditText>

        <ImageView
            android:id="@+id/lent_to_person_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/lent_to_person"
            android:paddingLeft="3dp"
            android:paddingRight="5dp"
            android:src="@drawable/personal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lent_date_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lent_to_person_layout"
        android:gravity="center" >

        <EditText
            android:id="@+id/lent_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Lent Date"
            android:inputType="date"
            android:singleLine="true" >

            <requestFocus>
            </requestFocus>
        </EditText>

        <ImageView
            android:id="@+id/lent_date_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/lent_date"
            android:paddingLeft="3dp"
            android:paddingRight="5dp"
            android:src="@drawable/calendar" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/due_date_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lent_date_layout"
        android:gravity="center" >

        <EditText
            android:id="@+id/due_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Due Date"
            android:inputType="date"
            android:singleLine="true" >

            <requestFocus>
            </requestFocus>
        </EditText>

        <ImageView
            android:id="@+id/due_date_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/due_date"
            android:paddingLeft="3dp"
            android:paddingRight="5dp"
            android:src="@drawable/calendar" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/updateLentItemButton_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/due_date_layout"
        android:gravity="center" >

        <Button
            android:id="@+id/updateLentItemButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/due_date_layout"
            android:gravity="center"
            android:text="UPDATE"
            android:textSize="20sp"
            android:textStyle="bold" >
        </Button>
    </LinearLayout>

</RelativeLayout>